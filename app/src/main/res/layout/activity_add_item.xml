<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightGreen"
    tools:context="azhar.sudha.marmupos.items.AddItemActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_8dp">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/item_name_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/box_white"
            android:paddingBottom="@dimen/_16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_item_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16dp"
                android:layout_marginTop="@dimen/_16dp"
                android:text="Item description"
                android:textSize="@dimen/_20sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_fav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_16dp"
                android:layout_marginTop="@dimen/_16dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_star"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/line1"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_16dp"
                android:background="@color/colorAccent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_item_desc" />

            <TextView
                android:id="@+id/tv_label_item_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16dp"
                android:layout_marginTop="@dimen/_16dp"
                android:text="Item name"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line1" />

            <EditText
                android:id="@+id/et_item_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_16dp"
                android:layout_marginStart="@dimen/_16dp"
                android:layout_marginTop="@dimen/_4dp"
                android:background="@drawable/rounded_box"
                android:inputType="text"
                android:padding="@dimen/_8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_label_item_name"
                tools:ignore="LabelFor" />

            <TextView
                android:id="@+id/tv_label_category_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16dp"
                android:layout_marginTop="@dimen/_16dp"
                android:text="Category"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_item_name" />

            <LinearLayout
                android:id="@+id/category_spinner_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_16dp"
                android:layout_marginStart="@dimen/_16dp"
                android:layout_marginTop="@dimen/_4dp"
                android:background="@drawable/rounded_box"
                android:padding="@dimen/_8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_label_category_name">

                <Spinner
                    android:id="@+id/category_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_8dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_sold_by"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16dp"
                android:layout_marginTop="@dimen/_16dp"
                android:text="Sold by"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/category_spinner_layout" />

            <RadioGroup
                android:id="@+id/rg_sold_by"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_16dp"
                android:layout_marginStart="@dimen/_16dp"
                android:layout_marginTop="@dimen/_4dp"
                android:orientation="horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_sold_by">

                <RadioButton
                    android:id="@+id/rb_each"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_4dp"
                    android:text="Each" />

                <RadioButton
                    android:id="@+id/rb_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_4dp"
                    android:text="Weight" />

            </RadioGroup>

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16dp"
                android:layout_marginTop="@dimen/_16dp"
                android:text="Price"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rg_sold_by" />

            <EditText
                android:id="@+id/et_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_16dp"
                android:layout_marginStart="@dimen/_16dp"
                android:layout_marginTop="@dimen/_4dp"
                android:background="@drawable/rounded_box"
                android:inputType="text"
                android:padding="@dimen/_8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_price"
                tools:ignore="LabelFor" />

            <TextView
                android:id="@+id/tv_price_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_16dp"
                android:layout_marginStart="@dimen/_16dp"
                android:layout_marginTop="@dimen/_8dp"
                android:text="@string/price_desc"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_price" />

            <TextView
                android:id="@+id/tv_sku"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16dp"
                android:layout_marginTop="@dimen/_16dp"
                android:text="SKU"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_price_desc" />

            <EditText
                android:id="@+id/et_sku"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_16dp"
                android:layout_marginStart="@dimen/_16dp"
                android:layout_marginTop="@dimen/_4dp"
                android:background="@drawable/rounded_box"
                android:inputType="text"
                android:padding="@dimen/_8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_sku"
                tools:ignore="LabelFor" />

            <TextView
                android:id="@+id/tv_barcode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16dp"
                android:layout_marginTop="@dimen/_16dp"
                android:text="Barcode"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_sku" />

            <EditText
                android:id="@+id/et_barcode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_16dp"
                android:layout_marginStart="@dimen/_16dp"
                android:layout_marginTop="@dimen/_4dp"
                android:background="@drawable/rounded_box"
                android:inputType="text"
                android:padding="@dimen/_8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_barcode"
                tools:ignore="LabelFor" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/item_pos_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16dp"
            android:background="@drawable/box_white"
            android:paddingBottom="@dimen/_16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_name_layout">

            <TextView
                android:id="@+id/tv_item_representation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16dp"
                android:layout_marginTop="@dimen/_16dp"
                android:text="Representation on POS"
                android:textSize="@dimen/_20sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/line2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_16dp"
                android:background="@color/colorAccent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_item_representation" />

            <RadioGroup
                android:id="@+id/rg_background"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_16dp"
                android:layout_marginStart="@dimen/_16dp"
                android:layout_marginTop="@dimen/_4dp"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line2">

                <RadioButton
                    android:id="@+id/rb_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Color" />

                <RadioButton
                    android:id="@+id/rb_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Image" />
            </RadioGroup>

            <LinearLayout
                android:id="@+id/item_color_shape_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_16dp"
                android:visibility="visible"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rg_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_4dp"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <ImageView
                        android:id="@+id/color_grey"
                        android:layout_width="@dimen/_0dp"
                        android:layout_height="@dimen/_75dp"
                        android:layout_marginEnd="@dimen/_4dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_box_grey"
                        android:contentDescription="@string/app_name"
                        android:onClick="colorClick"
                        android:src="@drawable/ic_check_white" />

                    <ImageView
                        android:id="@+id/color_red"
                        android:layout_width="@dimen/_0dp"
                        android:layout_height="@dimen/_75dp"
                        android:layout_marginEnd="@dimen/_4dp"
                        android:layout_marginStart="@dimen/_4dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_box_red"
                        android:contentDescription="@string/app_name"
                        android:onClick="colorClick" />

                    <ImageView
                        android:id="@+id/color_green"
                        android:layout_width="@dimen/_0dp"
                        android:layout_height="@dimen/_75dp"
                        android:layout_marginEnd="@dimen/_4dp"
                        android:layout_marginStart="@dimen/_4dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_box_green"
                        android:contentDescription="@string/app_name"
                        android:onClick="colorClick" />

                    <ImageView
                        android:id="@+id/color_blue"
                        android:layout_width="@dimen/_0dp"
                        android:layout_height="@dimen/_75dp"
                        android:layout_marginStart="@dimen/_4dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_box_blue"
                        android:contentDescription="@string/app_name"
                        android:onClick="colorClick" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4dp"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <ImageView
                        android:id="@+id/color_yellow"
                        android:layout_width="@dimen/_0dp"
                        android:layout_height="@dimen/_75dp"
                        android:layout_marginEnd="@dimen/_4dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_box_yellow"
                        android:contentDescription="@string/app_name"
                        android:onClick="colorClick" />

                    <ImageView
                        android:id="@+id/color_sky"
                        android:layout_width="@dimen/_0dp"
                        android:layout_height="@dimen/_75dp"
                        android:layout_marginEnd="@dimen/_4dp"
                        android:layout_marginStart="@dimen/_4dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_box_sky"
                        android:contentDescription="@string/app_name"
                        android:onClick="colorClick" />

                    <ImageView
                        android:id="@+id/color_orange"
                        android:layout_width="@dimen/_0dp"
                        android:layout_height="@dimen/_75dp"
                        android:layout_marginEnd="@dimen/_4dp"
                        android:layout_marginStart="@dimen/_4dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_box_orange"
                        android:contentDescription="@string/app_name"
                        android:onClick="colorClick" />

                    <ImageView
                        android:id="@+id/color_purple"
                        android:layout_width="@dimen/_0dp"
                        android:layout_height="@dimen/_75dp"
                        android:layout_marginStart="@dimen/_4dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_box_purple"
                        android:contentDescription="@string/app_name"
                        android:onClick="colorClick" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_shape"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16dp"
                    android:text="Shape" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16dp"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <ImageView
                        android:id="@+id/shape_box"
                        android:layout_width="@dimen/_0dp"
                        android:layout_height="@dimen/_75dp"
                        android:layout_marginEnd="@dimen/_4dp"
                        android:layout_weight="1"
                        android:contentDescription="@string/app_name"
                        android:onClick="shapeClick"
                        android:src="@drawable/ic_check_black" />

                    <ImageView
                        android:id="@+id/shape_circle"
                        android:layout_width="@dimen/_0dp"
                        android:layout_height="@dimen/_75dp"
                        android:layout_marginEnd="@dimen/_4dp"
                        android:layout_marginStart="@dimen/_4dp"
                        android:layout_weight="1"
                        android:contentDescription="@string/app_name"
                        android:onClick="shapeClick" />

                    <ImageView
                        android:id="@+id/shape_circle_zig"
                        android:layout_width="@dimen/_0dp"
                        android:layout_height="@dimen/_75dp"
                        android:layout_marginEnd="@dimen/_4dp"
                        android:layout_marginStart="@dimen/_4dp"
                        android:layout_weight="1"
                        android:contentDescription="@string/app_name"
                        android:onClick="shapeClick" />

                    <ImageView
                        android:id="@+id/shape_hexagon"
                        android:layout_width="@dimen/_0dp"
                        android:layout_height="@dimen/_75dp"
                        android:layout_marginStart="@dimen/_4dp"
                        android:layout_weight="1"
                        android:contentDescription="@string/app_name"
                        android:onClick="shapeClick" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/item_image_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_16dp"
                android:visibility="gone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rg_background">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Picture of the item not specified" />

                <TextView
                    android:layout_width="@dimen/_150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_8dp"
                    android:background="@drawable/box_card"
                    android:drawablePadding="@dimen/_8dp"
                    android:drawableStart="@drawable/ic_folder"
                    android:gravity="center"
                    android:padding="@dimen/_16dp"
                    android:text="Choose from the folder" />

                <TextView
                    android:layout_width="@dimen/_150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_8dp"
                    android:background="@drawable/box_card"
                    android:drawablePadding="@dimen/_8dp"
                    android:drawableStart="@drawable/ic_camera"
                    android:gravity="center"
                    android:padding="@dimen/_16dp"
                    android:text="Take Picture" />

            </LinearLayout>

        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>

</ScrollView>

